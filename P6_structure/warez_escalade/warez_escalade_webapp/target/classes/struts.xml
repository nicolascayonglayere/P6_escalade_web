<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="bootstrap" />
	<constant name="struts.custom.i18n.resources" value="package" />
	
	<package name="default" extends="struts-default">
			
		<interceptors>
			<interceptor class="oc.P6.escalade.interceptor.LoginInterceptor" name="loginInterceptor"/>
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack" />
       			<interceptor-ref name="store">
					<param name="operationMode">RETRIEVE</param>
		    	</interceptor-ref>				
			</interceptor-stack>
			
			<interceptor class="oc.P6.escalade.interceptor.CommentaireInterceptor" name="commentaireInterceptor"/>
			<interceptor-stack name="commentaireStack">
				<interceptor-ref name="commentaireInterceptor" />
				<interceptor-ref name="defaultStack" />
       			<interceptor-ref name="store">
					<param name="operationMode">RETRIEVE</param>
		    	</interceptor-ref>				
			</interceptor-stack>			
		</interceptors>

		<!--<default-interceptor-ref name="commentaireInterceptor" />-->

        <!-- Action par dÃ©faut -->
        <default-action-ref name="index" />

		<global-results>
			<result name="login">/jsp/_include/login.jsp</result>
		</global-results>

        <!-- Action "index" -->
        <action name="index">
            <result>/jsp/index.jsp</result>
        </action>

	
		<!--   login action  -->
		
		<action name="loginUser" class="oc.P6.escalade.actions.LoginAction" method="loginRegisterUser">
       			 <interceptor-ref name="store">
					<param name="operationMode">STORE</param>
		    	 </interceptor-ref>
		    	 <interceptor-ref name="defaultStack" />
			<result name="success">/jsp/utilisateur/accueil_utilisateur.jsp</result>
			<result name="login">/jsp/_include/login.jsp</result>
			<result name="input">/jsp/_include/login.jsp</result>			
		</action>

		<!-- home link action -->
		<action name="homeAction" class="oc.P6.escalade.actions.LoginAction" method="home">
			<result name="success">index</result>
		</action>

        <!-- Actions de lister les topos -->
        <action name="lister_topo" class="oc.P6.escalade.actions.SelectTopoAction" method="doListTopo">
        	<result name="success">/jsp/index.jsp</result>
        </action>
        
        <!--Construction et affichage du topo-->
        <action name="go_topo" class="oc.P6.escalade.actions.GoTopoAction" method="execute">
		   	<interceptor-ref name="defaultStack" />
        	<result name="input">index</result>
        	<result name="success">/jsp/topo.jsp</result>
        </action>
        
        <!-- page contact-->
        <action name="contact" class="oc.P6.escalade.actions.ContactAction" method="execute">
        	<result name="input">index</result>
        	<result name="success">/jsp/contact.jsp</result>
        </action>
        
        <action name="envoi_message" class="oc.P6.escalade.actions.ContactAction" method="envoi">
        	<result name = "success">index</result>
        </action>        
        
        <!-- page presentation-->
        <action name="presentation" class="oc.P6.escalade.actions.PresentationAction" method="execute">
        	<result name = "success">/jsp/presentation.jsp</result>
        </action>
        
        <!-- page d'inscription -->
        <action name="inscription" class="oc.P6.escalade.actions.InscriptionAction" method="execute">
        	<result name="success">/jsp/creer_user.jsp</result>
        </action>
 	        
        <action name="creer_user" class="InscriptionAction" method="creerUser">
       		<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
		    </interceptor-ref>
		    <interceptor-ref name="defaultStack" />        
        	<result name="input">/jsp/creer_user.jsp</result>
        	<result name="success">/jsp/utilisateur/accueil_utilisateur.jsp</result>
        </action>
 	</package>
        
	<package name="utilisateur" extends="default" namespace="/jsp/utilisateur">   
		<!--<default-interceptor-ref name="loginInterceptor" />-->
		
		<!--   logout action  -->
		<action name="logOut" class="oc.P6.escalade.actions.LoginAction" method="logOut">
			<result name="success" type="redirectAction">
				<param name="actionName">index</param>
				<param name="namespace">/</param>
			</result>
		</action>
			      
        <!-- page compte utilisateur -->
        <action name="go_monCompte" class="oc.P6.escalade.actions.MonCompteAction" method="execute">
        	<result name="success">compte_utilisateur.jsp</result>
        </action> 
        
        <action name="retour_topo" class="oc.P6.escalade.actions.GestionPretAction" method="retourner">
        	<result name="success" type="redirectAction">
        		<param name="actionName">go_monCompte</param>
        		<param name="namespace">/jsp/utilisateur</param>
        	</result>
        </action>
               
        <action name="emprunt_topo" class="oc.P6.escalade.actions.GestionPretAction" method="emprunter">
        	<result name="success">../jsp/index.jsp</result>
        </action>
        
        <action name="modifier_user" class="oc.P6.escalade.actions.ModifierUserAction" method="execute">
        	<result name="input">compte_utilisateur.jsp</result>        
        	<result name="success">compte_utilisateur.jsp</result>	
        </action>
        
        <action name="supprimer_compte" class="oc.P6.escalade.actions.SupprimerUserAction" method="execute">
        	<result name="success">../jsp/index.jsp</result>
        </action>
        
        <action name="commenter" class="oc.P6.escalade.actions.CommenterAction" method="commenter">
        	<result name="success" type="redirectAction">
        		<param name="actionName">go_topo</param>
        		<param name="namespace">../</param>
        	</result>
        	<result name="input">../jsp/topo.jsp</result>
        </action>      
   
		<!--Toutes les actions de gestion de commentaires -->
		<action name="validerCommentaire" class="oc.P6.escalade.actions.ValidationCommentaireAction" method="valider">
    		<result name="success" type="redirectAction">
    			<param name="actionName">go_monCompte</param>
    			<param name="namespace">/jsp/utilisateur</param>
    		</result>
		</action>
		
		<!--Toutes les actions de creation de topo -->
		<action name="go_creerTopo" class="oc.P6.escalade.actions.GoCreerTopo" method="execute">
			<result name="success">/jsp/admin/creer_topo.jsp</result>
			<result name="input">compte_utilisateur.jsp</result>
		</action>
		
		<action name="creer_topo" class="oc.P6.escalade.actions.CreerTopo" method="execute">
			<result name="success">/jsp/admin/creer_topo.jsp</result>
			<result name="input">/jsp/admin/creer_topo.jsp</result>			
		</action>

		<action name="creer_site" class="oc.P6.escalade.actions.CreerSite" method="execute">
			<result name="success">/jsp/admin/creer_topo.jsp</result>
			<result name="input">/jsp/admin/creer_topo.jsp</result>			
		</action>			   

		<action name="creer_secteur" class="oc.P6.escalade.actions.CreerSecteur" method="execute">
			<result name="success">/jsp/admin/creer_topo.jsp</result>
			<result name="input">/jsp/admin/creer_topo.jsp</result>			
		</action>

		<action name="creer_voie" class="oc.P6.escalade.actions.CreerVoie"	method="execute">
			<result name="success">/jsp/admin/creer_topo.jsp</result>
			<result name="input">/jsp/admin/creer_topo.jsp</result>			
		</action>
				    
		<!--Toutes les actions de suppression de topo/site/secteur/voie -->
		
		<!-- Action de ban -->
		<action name="go_ban" class="oc.P6.escalade.actions.GoBanAction" method="execute">
			<result name="success">/jsp/admin/ban.jsp</result>
			<result name="input">compte_utilisateur.jsp</result> 
		</action>
		
		<action name="recherche_utilisateur" class="oc.P6.escalade.actions.RechercheUtilisateurAction" method="execute">
			<result name="success">/jsp/admin/ban.jsp</result>
		</action>
		
		<action name="bannir" class="oc.P6.escalade.actions.BanUtilisateurAction" method="execute">
			<result name="success" type="redirectAction">
				<param name="actionName">go_monCompte</param>
				<param name="namespace">/jsp/utilisateur</param>
			</result>
		</action>
		
  
	</package>
</struts>


